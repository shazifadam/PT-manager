{
  "extends": ["react-app"],
  "rules": {
    "no-restricted-syntax": [
      "error",
      {
        "selector": "Literal[value=/#[0-9a-fA-F]{3,6}/]:not(:matches(Property[key.name='brand'], Property[key.name='gray'], Property[key.name='semantic']))",
        "message": "Direct hex colors are not allowed outside of tokens.ts. Use design system tokens instead."
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["baseui/*"],
            "importNames": ["Button", "Input"],
            "message": "Use FT* wrappers from design-system instead of direct Base UI imports."
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/design-system/**/*.ts", "src/design-system/**/*.tsx"],
      "rules": {
        "no-restricted-imports": "off",
        "no-restricted-syntax": "off"
      }
    },
    {
      "files": ["src/components/**/*.tsx", "src/pages/**/*.tsx"],
      "rules": {
        "no-restricted-imports": "off"
      }
    }
  ]
}
